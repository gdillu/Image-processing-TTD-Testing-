{
  "manifest_version": 3,
  "name": "Automation Extension",
  "version": "1.0",
  "description": "Automates tasks on the TTD Devasthanams website.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_js":"popup.js"
  },
  "content_scripts": [
    {
      "matches": ["https://ttdevasthanams.ap.gov.in/*"],
      "js": ["content.js"]
    }
  ]
}
